
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // دالة للتحقق من أن المستخدم مسجل دخول
    function isAuthenticated() {
      return request.auth != null;
    }

    // دالة للتحقق من أن المستخدم هو صاحب البيانات
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // دالة للتحقق من صلاحية المشرف (Admin)
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // قواعد ملفات المستخدمين
    match /users/{userId} {
      // السماح بالقراءة إذا كان صاحب الحساب أو مشرفاً
      allow read: if isAuthenticated() && (isOwner(userId) || isAdmin());
      // السماح بالإنشاء للمستخدم الجديد لنفسه فقط
      allow create: if isAuthenticated() && isOwner(userId);
      // السماح بالتحديث لصاحب الحساب (مثل زيادة عداد البحث) أو للمشرف
      allow update: if isAuthenticated() && (isOwner(userId) || isAdmin());
      // المسح للمشرف فقط
      allow delete: if isAdmin();
    }
    
    // قواعد التحليلات المحفوظة
    match /saved_analyses/{analysisId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow update, delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // قواعد الإعدادات والباقات (configs)
    match /configs/{configId} {
      // تم تعديل القراءة لتكون متاحة للجميع (حتى غير المسجلين) 
      // ليتمكن النظام من جلب اسم الموقع والشعار والمفاتيح للمحاولات المجانية
      allow read: if true;
      // الكتابة والتعديل للمشرف فقط
      allow write: if isAdmin();
    }
    
    // قواعد أقسام المكتبة العامة
    match /libraryCategories/{categoryId} {
      // القراءة متاحة للجميع
      allow read: if true;
      // الكتابة والتعديل والحذف للمشرف فقط
      allow create, update, delete: if isAdmin();
    }
    
    // قواعد المكتبة العامة
    match /publicLibrary/{analysisId} {
      // القراءة متاحة للجميع (حتى الزوار)
      allow read: if true;
      // النشر والتعديل والحذف للمشرف فقط
      allow create, update, delete: if isAdmin();
    }
  }
}
